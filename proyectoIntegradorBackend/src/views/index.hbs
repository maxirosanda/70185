<h1>Productos</h1>
<div class="container-products">
    
    {{#if products.length}}
    {{#each products}}
        <div class="card">
            <h3 class="card-title">{{title}}</h3>
            <img class="card-img" src="/static/img/{{img}}"/>
            <div class="card-info">
                <span class="card-price">$ {{price}} ARG</span>
                <span class="card-stock">Stock: {{stock}}</span>
            </div>
            <div class="container-btn"> 
                <button id="delete-{{id}}" class="btn btn-delete">Borrar</button>
                <button class="btn btn-update">Actualizar</button>
            </div>
        </div>

    {{/each}}

    {{else}}
    <p>no hay productos disponibles</p>
    {{/if}}

</div>
<script src="/static/js/edit-product.js"></script>